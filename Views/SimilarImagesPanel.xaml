<UserControl x:Class="DupFree.Views.SimilarImagesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{DynamicResource AppBackground}"
    Foreground="{DynamicResource WindowForeground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="380" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Control Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{DynamicResource ControlBackground}" Padding="16" Margin="0,0,0,8">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Scan Button -->
                <Button Name="ScanSimilarButton" Click="ScanSimilarButton_Click" Style="{StaticResource PrimaryButton}" Padding="20,8" Height="40">
                    Scan for Similar
                </Button>

                <!-- Closest Pairs Button -->
                <Button Name="ClosestPairsButton" Click="ClosestPairsButton_Click" Style="{StaticResource SecondaryButton}" Padding="16,8" Height="40" Margin="8,0,0,0">
                    Closest Pairs
                </Button>
                
                <!-- Max Distance Slider (Optional fine-tuning) -->
                <TextBlock Text="Similarity:" Foreground="{DynamicResource ControlForeground}" Margin="24,0,8,0" VerticalAlignment="Center" />
                <Slider Name="MaxDistanceSlider" Minimum="85" Maximum="99" Value="92" Width="150" VerticalAlignment="Center" Margin="0,0,8,0" ValueChanged="MaxDistanceSlider_ValueChanged" ToolTip="Minimum SSIM similarity to group images. Higher = stricter matching." IsSnapToTickEnabled="True" TickFrequency="1" />
                <TextBlock Name="MaxDistanceText" Text="92%" Foreground="{DynamicResource ControlForeground}" Width="35" VerticalAlignment="Center" Margin="0,0,16,0" />
                
                <!-- Status Text -->
                <TextBlock Name="StatusText" Text="" Foreground="{DynamicResource MutedForeground}" FontSize="12" VerticalAlignment="Center" Margin="16,0,0,0" TextWrapping="Wrap" MaxWidth="200" />

                <!-- Auto Select Button -->
                <Button Name="AutoSelectButton" Click="AutoSelectButton_Click" Style="{StaticResource SecondaryButton}" Padding="20,8" Height="40" Margin="8,0,0,0">
                    Auto-Select
                </Button>

                <!-- Settings Button -->
                <Button Name="SettingsButton" Click="SettingsButton_Click" Style="{StaticResource SecondaryButton}" Padding="12,8" Height="40" Margin="8,0,0,0" ToolTip="Auto-select settings">
                    âš™
                </Button>

                <!-- Delete Button -->
                <Button Name="DeleteSimilarSelectedButton" Click="DeleteSimilarSelectedButton_Click" Style="{StaticResource DangerButton}" Padding="20,8" Height="40" Margin="0,0,0,0" HorizontalAlignment="Right">
                    Delete
                </Button>
            </StackPanel>
        </Border>

        <!-- Thumbnails Grid (Left) -->
        <Border Grid.Row="1" Grid.Column="0" Background="{DynamicResource AppBackground}" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl Name="SimilarGroupsItemsControl" ItemsSource="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,12">
                                <!-- Group Header -->
                                <Expander Header="{Binding ImageCount, StringFormat='Group - {0} images'}" 
                                         IsExpanded="True"
                                         Background="{DynamicResource CardBackground}"
                                         Foreground="{DynamicResource WindowForeground}"
                                         Margin="0,0,0,8">
                                    <StackPanel Margin="8">
                                        <!-- Checkboxes and Info -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <CheckBox Name="GroupCheckBox" IsChecked="{Binding IsSelected, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,8,0" />
                                            <TextBlock Text="{Binding SimilarityPercentage}" VerticalAlignment="Center" Foreground="{DynamicResource MutedForeground}" FontSize="12" />
                                            <Button Name="SelectGroupButton" Click="SelectGroupButton_Click" Style="{StaticResource SecondaryButton}" Padding="8,4" Height="24" Margin="8,0,0,0" FontSize="11">
                                                Select All
                                            </Button>
                                        </StackPanel>

                                        <!-- Thumbnails in rows -->
                                        <ItemsControl ItemsSource="{Binding Images}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Width="80" Height="80" CornerRadius="4" Background="{DynamicResource ControlBackground}" 
                                                           BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2" Margin="4" 
                                                           Cursor="Hand" MouseLeftButtonDown="Thumbnail_MouseDown" Name="ThumbBorder">
                                                        <Grid>
                                                            <!-- Thumbnail -->
                                                            <Image Source="{Binding Thumbnail}" Stretch="UniformToFill" />
                                                            
                                                            <!-- Selection indicator -->
                                                            <Rectangle Fill="Transparent">
                                                                <Rectangle.Style>
                                                                    <Style TargetType="Rectangle">
                                                                        <Setter Property="Stroke" Value="Transparent" />
                                                                        <Setter Property="StrokeThickness" Value="0" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                <Setter Property="Stroke" Value="#00FF00" />
                                                                                <Setter Property="StrokeThickness" Value="2" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Rectangle.Style>
                                                            </Rectangle>

                                                            <!-- Checkbox -->
                                                            <CheckBox Name="ThumbCheckBox" IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                                                     VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="2" />
                                                        </Grid>
                                                        <Border.ToolTip>
                                                            <ToolTip Content="{Binding FileName}" />
                                                        </Border.ToolTip>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Empty State (Left) -->
        <Grid Name="NoSimilarPlaceholder" Grid.Row="1" Grid.Column="0" IsHitTestVisible="False" Background="{DynamicResource AppBackground}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.75">
                <Border Width="44" Height="44" CornerRadius="22" Background="{DynamicResource ControlBackground}" Margin="0,0,0,8">
                    <TextBlock Text="ðŸ–¼" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
                </Border>
                <TextBlock Text="No similar images found" HorizontalAlignment="Center" FontWeight="SemiBold" />
                <TextBlock Text="Click &quot;Scan&quot; to find similar images" HorizontalAlignment="Center" Foreground="{DynamicResource MutedForeground}" FontSize="12" />
            </StackPanel>
        </Grid>

        <!-- Preview Pane (Right) -->
        <Border Grid.Row="1" Grid.Column="1" Background="{DynamicResource CardBackground}" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="12" Margin="0,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Preview" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource WindowForeground}" Margin="0,0,0,12" />

                    <!-- Image Preview -->
                    <Border Width="350" Height="250" Background="{DynamicResource ControlBackground}" CornerRadius="4" ClipToBounds="True" Margin="0,0,0,12">
                        <Image Name="PreviewImage" Stretch="UniformToFill" />
                    </Border>

                    <!-- File Info -->
                    <StackPanel Name="PreviewInfoPanel" Margin="0,0,0,16">
                        <TextBlock Name="PreviewFileName" Text="No image selected" FontSize="12" FontWeight="SemiBold" Foreground="{DynamicResource WindowForeground}" TextWrapping="Wrap" Margin="0,0,0,8" />
                        <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,8" />
                        <TextBlock Name="PreviewFilePath" Text="" FontSize="10" Foreground="{DynamicResource MutedForeground}" TextWrapping="Wrap" Margin="0,0,0,4" />
                        <TextBlock Name="PreviewFileSize" Text="" FontSize="10" Foreground="{DynamicResource MutedForeground}" Margin="0,0,0,4" />
                        <TextBlock Name="PreviewDimensions" Text="" FontSize="10" Foreground="{DynamicResource MutedForeground}" />
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
                        <Button Name="ViewImageButton" Click="ViewImageButton_Click" Style="{StaticResource SecondaryButton}" Padding="16,8" Height="36" Margin="0,0,0,8">
                            Open Image
                        </Button>
                        <Button Name="ToggleSelectButton" Click="ToggleSelectButton_Click" Style="{StaticResource SecondaryButton}" Padding="16,8" Height="36">
                            Mark for Deletion
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
